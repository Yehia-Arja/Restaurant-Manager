APP_NAME=SmartDine
APP_ENV=production
APP_KEY=base64:your_base64_app_key_here
APP_DEBUG=false
APP_URL=http://localhost
APP_PORT=8000

LOG_CHANNEL=stack
LOG_LEVEL=info

# Locale
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# PHP & Performance
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# Database
DB_CONNECTION=mysql
DB_HOST=database
DB_PORT=3306
DB_DATABASE=restaurant_db
DB_USERNAME=root
DB_PASSWORD=your_db_password_here

# Redis
CACHE_DRIVER=redis
SESSION_DRIVER=redis
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PORT=6379

# Mail (use log in dev)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_FROM_ADDRESS=hello@smartdine.app
MAIL_FROM_NAME="${APP_NAME}"

# AWS (optional for S3 upload)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=eu-west-3
AWS_BUCKET=fse-final-yehia

# JWT (secure this)
JWT_SECRET=your_jwt_secret
JWT_ALGO=HS256

# Pusher (for testing)
BROADCAST_DRIVER=pusher
PUSHER_APP_ID=local
PUSHER_APP_KEY=local
PUSHER_APP_SECRET=local
PUSHER_APP_CLUSTER=mt1

# WebSockets (Node.js service)
WEBSOCKETS_HOST=ws-server
WEBSOCKETS_PORT=3000

# OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_URL=https://api.openai.com/v1
